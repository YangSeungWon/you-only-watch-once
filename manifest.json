{
    "manifest_version": 3,
    "name": "You Only Watch Once (YOWO)",
    "version": "1.0",
    "description": "Savor the moment by ensuring every YouTube video is a one-time experience.",
    "permissions": [
        "storage",
        "scripting",
        "webNavigation"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    }
}